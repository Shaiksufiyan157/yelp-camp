<% layout('layout/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
<hr>
    <div class="col-6 offset-3">
        <h1>Enter the details</h1>
        <form action="/camps" method="POST" class="needs-validation" novalidate enctype="multipart/form-data" >
            <div class="mb-3">
                <label class="form-label"  for="name"> Enter the name of camp</label>
                <input class="form-control" type="text" name="campground[name]" id="name" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label"  for="name"> Enter the location of camp</label>
                <input class="form-control" type="text" name="campground[location]" id="location"required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
                <div class="mb-3">
                    <label class="form-label"  for="description"> Enter the description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                  <label class="form-label"  for="price"> Enter the Price of the camp</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">$</span>
                    </div>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1"required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                  </div>
                </div>
                <div class="mt-3">
                  <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
            <button class="btn btn-success">add camp ground</button>
        </div>      
        </form>
    </div>
</div>
