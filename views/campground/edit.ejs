<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <h1>Enter the details</h1>
            <form action="/camps/<%= camp._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label"  for="name"> Enter the name of camp</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= camp.name %>"required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="name"> Enter the location of camp</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>"required>
                </div>
                    <div class="mb-3">
                        <label class="form-label"  for="description"> Enter the Image URL of camp</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= camp.description %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                      <label class="form-label"  for="price"> Enter the Price of the camp</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">$</span>
                        </div>
                        <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1"value=" <%= camp.price %>"required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                      </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-file custom-file">
                            <input type="file" class="form-file-input" id="image" name="image" multiple>
                            <label class="form-file-label" for="image">
                                <span class="form-file-text custom-file-label">Add more image(s)...</span>
                                <span class="form-file-button">Browse</span>
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <% camp.images.forEach(function (img,i){ %>
                            <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
                            <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    <label for="image-<%= i %>">Delete?</label>
                            </div>
                            <% }) %>

                    </div>
                    <div class="mt-3">
                <button class="btn btn-info">update camp ground</button>
            </div>      
            </form>
        
        </div>
    </div>